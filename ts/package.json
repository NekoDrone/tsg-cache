{
    "name": "ts",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=cjs --sourcemap --external:@aws-sdk/*",
        "build:dev": "pnpm build -- --watch",
        "build:sam": "sam build",
        "package": "pnpm build && cd dist && zip -r ../lambda-function.zip .",
        "deploy": "aws lambda update-function-code --function-name hello-world-ts --zip-file fileb://lambda-function.zip",
        "env:generate": "node scripts/generate-env.js",
        "dev:invoke:article": "sam local invoke --env-vars env.json \"ArticleHandler\"",
        "dev:invoke:article:event": "sam local invoke --env-vars env.json \"ArticleHandler\" -e mocks/events/test-article-id.json",
        "drizzle:migrate": "drizzle-kit migrate",
        "drizzle:generate": "drizzle-kit generate"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "packageManager": "pnpm@10.10.0",
    "dependencies": {
        "@aws-sdk/client-lambda": "^3.828.0",
        "@aws-sdk/client-sqs": "^3.828.0",
        "@libsql/client": "^0.15.9",
        "@notionhq/client": "^3.1.3",
        "date-fns": "^4.1.0",
        "drizzle-orm": "^0.44.2",
        "drizzle-zod": "^0.8.2",
        "sanitize-html": "^2.17.0",
        "zod": "^3.25.64"
    },
    "devDependencies": {
        "@eslint/compat": "^1.3.0",
        "@eslint/js": "^9.29.0",
        "@types/aws-lambda": "^8.10.149",
        "@types/node": "^24.0.1",
        "@types/sanitize-html": "^2.16.0",
        "drizzle-kit": "^0.31.1",
        "esbuild": "^0.25.5",
        "eslint": "^9.29.0",
        "globals": "^16.2.0",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.34.0"
    }
}
