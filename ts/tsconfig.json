{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ES2022",
        "lib": ["ES2022"],

        /* Modules */
        "module": "commonjs",
        "rootDir": "./",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "resolveJsonModule": true,

        /* JavaScript Support */
        "allowJs": true,
        "checkJs": true,

        /* Emit */
        "sourceMap": true,
        "outDir": "./dist",

        /* Interop Constraints */
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,

        /* Type Checking */
        "strict": true,

        /* Completeness */
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "scripts"]
}
